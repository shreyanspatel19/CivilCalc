


<partial name="/Areas/SEC_User/Views/SEC_User/_FilterForm.cshtml" />
<div id="SearchResult"></div>

@section scripts {
    <script>
        $(document).ready(function () {
            $("#filterForm").submit();
        });

        function initDataTable(tableSelector) {
            $(tableSelector).DataTable({
                "scrollY": "300px",
                "scrollCollapse": true,
                "paging": false,
                "order": [],
                //"scroller": true,
                //"stateSave": true,
                "scrollX": true
            });
        }

        function OnSuccess(formID) {
            if (formID === "filterForm") {
                initDataTable("#tblList");
            }            

            if (formID === "formAddEditSave_UMS") {
                $("#filterForm").submit();
                toastr.success("Record saved successfully..!");
            }         

            if (formID === "formDelete_UMS") {
                $("#filterForm").submit();
                toastr.success("Record deleted successfully..!");
            }
        }
    </script>
}

