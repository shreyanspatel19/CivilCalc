@model CivilCalc.Areas.SEC_User.Models.SEC_UserModel
<div class="modal-header">
    <h4 class="modal-title">@ViewBag.Action User</h4>
    <button type="button" class="btn btn-danger btn-elevate btn-icon btn-sm" data-bs-dismiss="modal" aria-label="Close">
        <i class="fa fa-close"></i>
    </button>
</div>

<div class="modal-body">
    <form id="formAddEditSave_UMS" data-ajax="true" data-ajax-method="post"
          data-ajax-success="OnSuccess(this.id,data, status, xhr);" data-ajax-failure="OnFailure(xhr, status, error);"
          asp-area="SEC_User" asp-action="_Save" asp-controller="SEC_User">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.UserID)

        <div class="form-group row">
            <label class="col-md-4 col-form-label required">User Name</label>
            <div class="col-md-5 p-2">
                <input type="text" asp-for="UserName" class="form-control " placeholder="Enter User Name" />
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "form-text text-danger" })
            </div>
        </div>

         <div class="form-group row">
            <label class="col-md-4 col-form-label required">Password</label>
            <div class="col-md-5 p-2">
                <input type="text" asp-for="Password" class="form-control " placeholder="Enter Password" />
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "form-text text-danger" })
           </div>
        </div>

         <div class="form-group row">
            <label class="col-md-4 col-form-label">Email</label>
            <div class="col-md-5 p-2">
                <input type="text" asp-for="Email" class="form-control" placeholder="Enter Email" />
          </div>
        </div>

        <div class="form-group row">
            <label class="col-md-4 col-form-label">Mobile Number</label>
            <div class="col-md-5 p-2">
                <input type="text" asp-for="MobileNo" class="form-control" placeholder="Enter Mobile Number" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-md-4 col-form-label">Display Name</label>
            <div class="col-md-5 p-2">
                <input type="text" asp-for="DisplayName" class="form-control" placeholder="Enter Display Name" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-md-4 col-form-label">Description</label>
            <div class="col-md-5 p-2">
                <textarea type="text" asp-for="Description" class="form-control" placeholder="Enter  Description" ></textarea>
            </div>  
        </div>

        <div class="form-group row">
           <div class="form-check form-check-custom form-check-solid">
                <label class="col-md-4 col-form-label form-check-label" for="flexCheckChecked"> IsActive </label>
                <div class="col-md-5 p-2">
                 <div >
                        @Html.CheckBoxFor(m => m.IsActive , new { @class = "form-check-input"})
                    </div>
                </div>
           </div>
        </div>

       
        <hr class="form-button-divider" />
        <div class="row">
            <div class="offset-md-4 col-md-8">
                <input type="submit" value="Save" class="btn btn-primary btn-sm js-btn-modal-form-submit" />
                <button type="button" class="btn btn-light btn-sm" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </form>
</div>