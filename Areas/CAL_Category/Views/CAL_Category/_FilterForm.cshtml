@model CivilCalc.Areas.CAL_Category.Models.CAL_CategoryModel

<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="card-title">
            <span class="me-2"><i class="fa fa-search"></i></span> Search
            <small></small>
        </h3>
        <div class="card-toolbar">
           

        </div>
    </div>
    <div class="card-body">
        <form id="filterForm" data-ajax="true" data-ajax-method="post" data-ajax-mode="replace" data-ajax-update="#SearchResult"
              data-ajax-success="OnSuccess(this.id,data, status, xhr);" data-ajax-failure="OnFailure(xhr, status, error);"
              asp-area="CAL_Category" asp-action="_SearchResult" asp-controller="CAL_Category" novalidate="novalidate">
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-4">
                    <label class="">Category Name</label>
                    <select class="form-select form-select-solid " asp-for="CategoryID" asp-items="@(new SelectList(ViewBag.CategoryList,"CategoryID","CategoryName"))"
                            data-placeholder="Select Category"
                            >
                        <option>select Category</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="">User Name</label>
                    <select class="form-select form-select-solid  " asp-for="UserID" asp-items="@(new SelectList(ViewBag.UserList,"UserID","UserName"))"
                            data-placeholder="Select Category"
                           >
                        <option>select User</option>
                    </select>
                </div>
            </div>

            <hr />
            <input type="submit" value="Submit" class="btn btn-success btn-sm" />
        </form>
    </div>
</div>