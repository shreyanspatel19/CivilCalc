@model CivilCalc.Areas.SEC_User.Models.SEC_UserModel

<div>
    <form   data-method="post"
          asp-area="Login" asp-action="Login" asp-controller="Login">
        @if (TempData["Error"] != null)
        {
            <div class="text-danger">@Html.Raw(TempData["Error"]) </div>
        }
        <div class="form-group row">
            <label class="col-md-4 col-form-label ">id</label>
            <div class="col-md-5">
                <input type="text" asp-for="Email" class="form-control" placeholder="" />
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "form-text text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-4 col-form-label p-4 "> password</label>
            <div class="col-md-5">

                <textarea type="text" asp-for="Password" class="form-control" placeholder=""></textarea>
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "form-text text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="offset-md-4 col-md-8">
                <input type="submit" value="Save" class="btn btn-primary btn-sm form-submit" />
                <button type="button" class="btn btn-light btn-sm" >Cancel</button>
            </div>
        </div>

    </form>
</div>