@model CivilCalc.Areas.CAL_Calculator.Models.CAL_CalculatorModel

<div class="modal-header">
    <h4 class="modal-title">@ViewBag.Action Calculator</h4>
    <button type="button" class="btn btn-danger btn-elevate btn-icon btn-sm" data-bs-dismiss="modal" aria-label="Close">
        <i class="fa fa-close"></i>
    </button>
</div>

<div class="modal-body">
    <form id="formAddEditSave_UMS" data-ajax="true" data-ajax-method="post"
          data-ajax-success="OnSuccess(this.id,data, status, xhr);" data-ajax-failure="OnFailure(xhr, status, error);"
          asp-area="CAL_Calculator" asp-action="_Save" asp-controller="CAL_Calculator">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.CalculatorID)
        <div class="form-group row">
            <label class="col-md-4 col-form-label">Category Name</label>
            <div class="col-md-5 p-2">
                <select class="form-select form-select-solid" asp-for="CategoryID" asp-items="@(new SelectList(ViewBag.CategoryList,"CategoryID","CategoryName"))"
                        data-control="select2" data-placeholder="Select Category"
                        data-allow-clear="true" data-select2-id="select1-data-12-kpd1"
                        tabindex="-1" aria-hidden="true">
                    <option value="1">Select Category</option>
                </select>
            </div>
        </div>

    
        <div class="form-group row">
            <label class="col-md-4 col-form-label">Calculator Name</label>
            <div class="col-md-5 p-2">
                <input type="text" asp-for="CalculatorName" class="form-control" placeholder="Enter Calculator " />
                @Html.ValidationMessageFor(m => m.CalculatorName, "", new { @class = "form-text text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-4 col-form-label">Calculator Icon</label>
            <div class="col-md-5 p-2">
                <input type="text" asp-for="CalculatorIcon" class="form-control" placeholder="Enter Calculator Icon " />
                @Html.ValidationMessageFor(m => m.CalculatorIcon, "", new { @class = "form-text text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-4 col-form-label">URL Name </label>
            <div class="col-md-5 p-2">
                <input type="text" asp-for="URLName" class="form-control" placeholder="Enter URL Name " />
                @Html.ValidationMessageFor(m => m.URLName, "", new { @class = "form-text text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-4 col-form-label">Header Name </label>
            <div class="col-md-5 p-2">
                <input type="text" asp-for="HeaderName" class="form-control" placeholder="Enter Header Name " />
                @Html.ValidationMessageFor(m => m.HeaderName, "", new { @class = "form-text text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-4 col-form-label">SubHeader Name </label>
            <div class="col-md-5 p-2">
                <input type="text" asp-for="SubHeaderName" class="form-control" placeholder="Enter SubHeader Name " />
                @Html.ValidationMessageFor(m => m.SubHeaderName, "", new { @class = "form-text text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-4 col-form-label">Calculator Description </label>
            <div class="col-md-5 p-2">
                <textarea type="text" asp-for="CalculatorDescription" class="form-control" placeholder="Enter Calculator Description " ></textarea>
                @Html.ValidationMessageFor(m => m.CalculatorDescription, "", new { @class = "form-text text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-4 col-form-label">Page Section1  </label>
            <div class="col-md-5 p-2">
                <textarea type="text" asp-for="PageSection1" class="form-control" placeholder="Enter Page Section 1  " ></textarea>
                @Html.ValidationMessageFor(m => m.PageSection1, "", new { @class = "form-text text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-4 col-form-label">Page Section2  </label>
            <div class="col-md-5 p-2">
