                @Html.ValidationMessageFor(m => m.MetaAuthor, "", new { @class = "form-text text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-4 col-form-label">Meta Og Title </label>
            <div class="col-md-5 p-2">
