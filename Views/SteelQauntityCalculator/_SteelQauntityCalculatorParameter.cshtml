@model CivilCalc.Models.SteelQauntityCalculator;

<div class="row gy-5 g-xl-8">
    <!--begin: parameter-->
    <div class="col-md-7 mb-md-5 mb-xl-10">
        <!--begin: card-->
        <div class="card shadow">
            <!--begin :card header-->
            <div class="card-header">
                <h2 title="Steel Quantity Calculation" class="card-title">
                    <img class="img-fluid"
                         style="width: 16px"
                         src="@Url.Content(ViewBag.CalculatorIcon)" />
                    &nbsp;@ViewBag.CalculatorName.ToUpper()
                </h2>
            </div>
            <!--end :card header-->
            <!--begin :card body-->
            <div class="card-body">
                <!--begin :form body-->
                <form id="filterForm" data-ajax="true" data-ajax-method="post" data-ajax-mode="replace" data-ajax-update="#SearchResult"
                      asp-action="_Calculation" asp-controller="SteelQauntityCalculator" novalidate="novalidate">
                    @Html.AntiForgeryToken()

                    <!--begin :row 1  Unit-->
                    <div class="row input-group mb-2">
                        <div class="col-md-4 text-end">
                            <label class="form-label mt-2">
                                Member Type
                                <span title="A member type may also mean the standard construction member. For Ex. Footing, Column, Beam, Lintle"
                                      data-bs-toggle="tooltip"
                                      data-bs-trigger="hover"
                                      data-bs-dismiss="click"
                                      data-bs-placement="bottom"
                                      class="fa fa-info-circle font-lg popovers mx-2 btn-circle"
                                      style="color: #39abde"></span>
                            </label>
                        </div>
                        <div class="col-md-8">
                            <!--begin :input-->
                            <select asp-for="MemberType"
                                    data-bs-placement="right" data-bs-toggle="tooltip" 
                                    title="Select Member Type"
                                    class="form-select form-select-sm form-select-solid" id="ddlUnit" onchange="meterTofeet()"
                                    aria-label="Select example">
                                <option Value="80">Footing</option>
                                <option Value="160">Beam</option>
                                <option Value="110">Column</option>
                                <option Value="80">Slab</option>
                                <option Value="85">StairCase</option>
                                <option Value="50">Lintle/Coping</option>
                                <option Value="60">Retaining Wall</option>
                            </select>
                            <!--end :input-->
                        </div>
                    </div>
                    <!--end :row 1  Unit-->

                    <!--begin :row 2 Length -->
                    <div class="row input-group mb-2">
                        <div class="col-md-4 text-end">
                            <label class="form-label mt-3">
                                Concrete Quantity
                                <span title="Require concrete quantity for construct Footing, Lintle, Beam, Column"
                                      data-bs-toggle="tooltip"
                                      data-bs-trigger="hover"
                                      data-bs-dismiss="click"
                                      data-bs-placement="bottom"
                                      class="fa fa-info-circle font-lg popovers mx-2 btn-circle"
                                      style="color: #39abde"></span>
                            </label>
                        </div>
                        <div class="col-sm-8">
                            <div class="row">
                                <div class="col-sm-12">
                                    <!--begin :input-->
                                    <div class="input-group input-group-sm input-group-solid"> 
                                        <input type="text" asp-for="ConcreteQauntity" value="30"
                                        data-bs-placement="right" data-bs-toggle="tooltip" id="txtEducation"
                                               title="Enter Concrete Qauntity" class="form-control" />
                                        <span id="lengthToMF" class="input-group-text text-primary">m<sup>3</sup></span>
                                        @Html.ValidationMessageFor(m => m.ConcreteQauntity, "", new { @class = "form-text text-danger" })
                                    </div>
                                    <!--begin :input-->
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--begin :row 2 Length-->

                    <hr />
                    <!--begin :form submit-->

                    <div class="text-end">
                        <input type="submit" value="Calculate" title="Calculate Steel Quantity" class="btn btn-primary btn-sm" />
                        <a asp-action="Index" asp-controller="SteelQauntityCalculator" title="Reset" class="btn btn-danger btn-sm">Reset</a>
                    </div>
                    <!--end :form submit-->
                </form>
                <!--end :form body-->
            </div>
            <!--end :card body-->
        </div>
        <!--end: card-->
    </div>
    <!--end: parameter-->

    <!--begin: ads-->
    <div class="col-md-5 mb-md-5 mb-xl-10 mb-3">
        <!--begin :card-->
        <div class="card shadow">
            <!--begin :card body-->
            <div class="card-body">
                <div class="row">
                    <img src="~/ClinetPanel/img/10319505722267397698.jpeg" />
                </div>
            </div>
            <!--end :card body-->
        </div>
        <!--end :card -->
    </div>
    <!--end: ads-->
</div>
