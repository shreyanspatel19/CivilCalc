@model CivilCalc.Models.CementConcreteCalculator;
<div class="row gy-5 g-xl-8">
    <div class="col-md-7 mb-md-5 mb-xl-10">
        <div class="card shadow">
            <div class="card-header">
                <h3 class="card-title">
                    <img class="img-fluid"
                         style="width: 16px"
                         src="@("/Upload/"+ViewBag.CalculatorIcon.Substring(9))" />
                    &nbsp;@ViewBag.CalculatorName
                </h3>
            </div>
            <div class="card-body">
                <form id="filterForm" data-ajax="true" data-ajax-method="post" data-ajax-mode="replace" data-ajax-update="#SearchResult"
                      asp-action="_Calculation" asp-controller="CementConcreteCalculator" novalidate="novalidate">
                    @Html.AntiForgeryToken()
                    <div class="row input-group mb-2">
                        <div class="col-md-4 text-end">
                            <label class="form-label mt-2">
                                Unit
                                <span title="A unit may also mean the standard units used for measurement. For Ex. feet/inch &amp; meter/cm"
                                      data-bs-toggle="tooltip"
                                      data-bs-trigger="hover"
                                      data-bs-dismiss="click"
                                      data-bs-placement="bottom"
                                      class="fa fa-info-circle font-lg popovers mx-2 btn-circle"
                                      style="color: #39abde"></span>
                            </label>
                        </div>
                        <div class="col-md-8">
                            <select asp-for="UnitID"
                                    data-bs-placement="right" data-bs-toggle="tooltip"
                                    title="Select Unit (Feet/Inch &amp; Meter/CM)"
                                    class="form-select form-select-sm form-select-solid" id="ddlUnit" onchange="meterTofeet()"
                                    aria-label="Select example">
                                <option value="1" Selected="True">Meter/CM</option>
                                <option value="2">Feet/Inch</option>
                            </select>
                        </div>
                    </div>
                    <div class="row input-group mb-2">
                        <div class="col-md-4 text-end">
                            <label class="form-label mt-3">
                                Grade of Concrete
                                <span title="When adopting water curing under normal temperature and atmosphere pressure，the compressive strength，flexural strength and frost resistance of the unfired brick are measured. The results reveal that the optimum mixing ratio for unfired brick is: Carbide slag 30%，fly ash 30%，cement 25% and clay 15%"
                                      data-bs-toggle="tooltip"
                                      data-bs-trigger="hover"
                                      data-bs-dismiss="click"
                                      data-bs-placement="bottom"
                                      class="fa fa-info-circle font-lg popovers mx-2 btn-circle"
                                      style="color: #39abde"></span>
                            </label>
                        </div>
                        <div class="col-md-8">
                            <select asp-for="GradeID" class="form-select form-select-sm form-select-solid" ToolTip="Select Ratio"
                                    data-bs-toggle="tooltip" data-bs-placement="right" title="Select Ratio" aria-label="Select example">
                                <option value="5.5" Selected="True">M20 (1:1.5:3)</option>
                                <option value="7" >M15 (1:2:4)</option>
                                <option value="10">M10 (1:3:6)</option>
                                <option value="13">M7.5 (1:4:8)</option>
                            </select>
                        </div>
                    </div>
                    <div class="row input-group mb-2">
                        <div class="col-md-4 text-end">
                            <label class="form-label mt-3">
                                Length
                                <span title="Length is the term used for identifying the size of an object or distance."
                                      data-bs-toggle="tooltip"
                                      data-bs-trigger="hover"
                                      data-bs-dismiss="click"
                                      data-bs-placement="bottom"
                                      class="fa fa-info-circle font-lg popovers mx-2 btn-circle"
                                      style="color: #39abde"></span>
                            </label>
                        </div>
                        <div class="col-sm-8">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="input-group input-group-sm input-group-solid">
                                        <input type="text" asp-for="LengthA" value="10"
                                               data-bs-placement="right" data-bs-toggle="tooltip" id="txtEducation"
                                               title="Enter length" class="form-control" />
                                        <span id="lengthToMF" class="input-group-text text-primary">feet</span>
                                        @Html.ValidationMessageFor(m => m.LengthA, "", new { @class = "form-text text-danger" })
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="input-group input-group-sm input-group-solid mt-1">
                                        <input type="text" asp-for="LengthB" value="0" id="txtLodging"
                                               data-bs-placement="right" data-bs-toggle="tooltip"
                                               title="Enter length" class="form-control" />
                                        <span id="lengthToCI" class="input-group-text text-primary">inch</span>
                                        @Html.ValidationMessageFor(m => m.LengthB, "", new { @class = "form-text text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row input-group mb-2">
                        <div class="col-md-4 text-end">
                            <label class="form-label mt-3">
                                Widt
                                <span title="depth is a measurement of how far back a three dimensional object is."
                                      data-bs-toggle="tooltip"
                                      data-bs-trigger="hover"
                                      data-bs-dismiss="click"
                                      data-bs-placement="bottom"
                                      class="fa fa-info-circle font-lg popovers mx-2 btn-circle"
                                      style="color: #39abde"></span>
                            </label>
                        </div>
                        <div class="col-sm-8">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="input-group input-group-sm input-group-solid">
                                        <input type="text" asp-for="WidthA" value="7"
                                               title="Enter depth" class="form-control"
                                               data-bs-placement="right" data-bs-toggle="tooltip"
                                               aria-label="Amount (to the nearest dollar)" />
                                        <span id="heightToMF" class="input-group-text text-primary">feet</span>
                                        @Html.ValidationMessageFor(m => m.WidthA, "", new { @class = "form-text text-danger" })
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="input-group input-group-sm input-group-solid mt-1">
                                        <input type="text" asp-for="WidthB"
                                               title="Enter depth" class="form-control" value="0"
                                               data-bs-placement="right" data-bs-toggle="tooltip"
                                               aria-label="Amount (to the nearest dollar)" />
                                        <span id="heightToCI" class="input-group-text text-primary">inch</span>
                                        @Html.ValidationMessageFor(m => m.WidthB, "", new { @class = "form-text text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row input-group mb-2">
                        <div class="col-md-4 text-end">
                            <label class="form-label mt-3">
                                Depth
                                <span title="depth is a measurement of how far back a three dimensional object is."
                                      data-bs-toggle="tooltip"
                                      data-bs-trigger="hover"
                                      data-bs-dismiss="click"
                                      data-bs-placement="bottom"
                                      class="fa fa-info-circle font-lg popovers mx-2 btn-circle"
                                      style="color: #39abde"></span>
                            </label>
                        </div>
                        <div class="col-sm-8">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="input-group input-group-sm input-group-solid">
                                        <input type="text" asp-for="DepthA" value="4"
                                               title="Enter depth" class="form-control"
                                               data-bs-placement="right" data-bs-toggle="tooltip"
                                               aria-label="Amount (to the nearest dollar)" />
                                        <span id="depthToMF" class="input-group-text text-primary">feet</span>
                                        @Html.ValidationMessageFor(m => m.WidthA, "", new { @class = "form-text text-danger" })
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="input-group input-group-sm input-group-solid mt-1">
                                        <input type="text" asp-for="DepthB"
                                               title="Enter depth" class="form-control" value="0"
                                               data-bs-placement="right" data-bs-toggle="tooltip"
                                               aria-label="Amount (to the nearest dollar)" />
                                        <span id="depthToCI" class="input-group-text text-primary">inch</span>
                                        @Html.ValidationMessageFor(m => m.WidthB, "", new { @class = "form-text text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <hr />
                    <div class="text-end">
                        <input onclick="updateChart()" type="submit" value="Submit" class="btn btn-primary btn-sm" />
                        <a asp-action="Index" asp-controller="BrickMasonryCalculator"  class="btn btn-danger btn-sm">reset</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-5 mb-md-5 mb-xl-10 mb-3">
        <div class="card shadow">
            <div class="card-body">
                <div class="row">
                    <img src="~/ClinetPanel/img/10319505722267397698.jpeg" />
                </div>
            </div>
        </div>
    </div>
</div>