@model CivilCalc.Models.BrickMasonryCalculator;
<div class="row gy-5 g-xl-8">
    <div class="col-md-7 mb-md-5 mb-xl-10">
        <div class="card shadow">
            <div class="card-header">
                <h3 class="card-title">
                    <img class="img-fluid"
                         style="width: 16px"
                         src="https://www.civil-engineering-calculators.com/images/icons/claybricks.png" />
                    &nbsp;BRICK MASONRY CALCULATION
                </h3>
            </div>
            <div class="card-body">
                <form id="filterForm" data-ajax="true" data-ajax-method="post" data-ajax-mode="replace" data-ajax-update="#SearchResult"
                      data-ajax-success="OnSuccess(this.id,data, status, xhr);" data-ajax-failure="OnFailure(xhr, status, error);"
                      asp-action="_Calculation" asp-controller="BrickMasonryCalculator" novalidate="novalidate">
                    @Html.AntiForgeryToken()
                    @TempData["Error"]
                    <div class="row input-group mb-2">
                        <div class="col-md-4 text-end">
                            <label class="form-label mt-2">
                                Unit
                                <span title="Check out over 200 in-house components, plugins and ready for use sd solutions"
                                      data-bs-toggle="tooltip"
                                      data-bs-trigger="hover"
                                      data-bs-dismiss="click"
                                      data-bs-placement="bottom"
                                      class="fa fa-info-circle font-lg popovers mx-2 btn-circle"
                                      style="color: #39abde"></span>
                            </label>
                        </div>
                        <div class="col-md-8">
                            <select asp-for="ddlUnit" class="form-select form-select-sm form-select-solid" id="ddlUnit" onchange="mTof()"
                                    aria-label="Select example">
                                <option value="1">Meter/CM</option>
                                <option value="2" Selected="True">Feet/Inch</option>
                            </select>
                        </div>
                    </div>
                    <div class="row input-group mb-2">
                        <div class="col-md-4 text-end">
                            <label class="form-label mt-3">
                                Length
                                <span title="Check out over 200 in-house components, plugins and ready for use sd solutions"
                                      data-bs-toggle="tooltip"
                                      data-bs-trigger="hover"
                                      data-bs-dismiss="click"
                                      data-bs-placement="bottom"
                                      class="fa fa-info-circle font-lg popovers mx-2 btn-circle"
                                      style="color: #39abde"></span>
                            </label>
                        </div>
                        <div class="col-sm-8">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="input-group input-group-sm input-group-solid">
                                        <input type="text" asp-for="txtWallLengthA" value="3"
                                               class="form-control"/>
                                        <span id="lengthToMF" class="input-group-text text-primary">feet</span>
                                        @*@Html.ValidationMessageFor(m => m.txtWallLengthA, "", new { @class = "form-text text-danger" })*@
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="input-group input-group-sm input-group-solid mt-1">
                                        <input type="text" asp-for="txtWallLengthB" value="6"
                                               class="form-control" />
                                        <span id="lengthToCI" class="input-group-text text-primary">inch</span>
                                        @*@Html.ValidationMessageFor(m => m.txtWallLengthB, "", new { @class = "form-text text-danger" })*@
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row input-group mb-2">
                        <div class="col-md-4 text-end">
                            <label class="form-label mt-3">
                                Height / Depth
                                <span title="Check out over 200 in-house components, plugins and ready for use sd solutions"
                                      data-bs-toggle="tooltip"
                                      data-bs-trigger="hover"
                                      data-bs-dismiss="click"
                                      data-bs-placement="bottom"
                                      class="fa fa-info-circle font-lg popovers mx-2 btn-circle"
                                      style="color: #39abde"></span>
                            </label>
                        </div>
                        <div class="col-sm-8">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="input-group input-group-sm input-group-solid">
                                        <input type="text" asp-for="txtWallDepthA" value="3"
                                               class="form-control"
                                               aria-label="Amount (to the nearest dollar)" />
                                        <span id="heightToMF" class="input-group-text text-primary">feet</span>
                                        @*@Html.ValidationMessageFor(m => m.txtWallDepthA, "", new { @class = "form-text text-danger" })*@
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="input-group input-group-sm input-group-solid mt-1">
                                        <input type="text" asp-for="txtWallDepthB"
                                               class="form-control" value="6"
                                               aria-label="Amount (to the nearest dollar)" />
                                        <span id="heightToCI" class="input-group-text text-primary">inch</span>
                                        @*@Html.ValidationMessageFor(m => m.txtWallDepthB, "", new { @class = "form-text text-danger" })*@
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row input-group mb-2">
                        <div class="col-md-4 text-end">
                            <label class="form-label mt-3">
                                Wall Thickness
                                <span title="Check out over 200 in-house components, plugins and ready for use sd solutions"
                                      data-bs-toggle="tooltip"
                                      data-bs-trigger="hover"
                                      data-bs-dismiss="click"
                                      data-bs-placement="bottom"
                                      class="fa fa-info-circle font-lg popovers mx-2 btn-circle"
                                      style="color: #39abde"></span>
                            </label>
                        </div>
                        <div class="col-md-8">
                            <select asp-for="ddlWallThickness" class="form-select form-select-sm form-select-solid" ToolTip="Select BrickWork"
                                    aria-label="Select example">
                                <option value="0.1">10 CM  Wall</option>
                                <option value="0.23" Selected="True">23 CM  Wall</option>
                                <option value="3">Others Partition</option>
                            </select>
                        </div>
                    </div>
                    <div class="row input-group mb-2">
                        <div class="col-md-4 text-end">
                            <label class="form-label mt-3">
                                Ratio
                                <span title="Check out over 200 in-house components, plugins and ready for use sd solutions"
                                      data-bs-toggle="tooltip"
                                      data-bs-trigger="hover"
                                      data-bs-dismiss="click"
                                      data-bs-placement="bottom"
                                      class="fa fa-info-circle font-lg popovers mx-2 btn-circle"
                                      style="color: #39abde"></span>
                            </label>
                        </div>
                        <div class="col-md-8">
                            <select asp-for="ddlRatio" class="form-select form-select-sm form-select-solid" ToolTip="Select Ratio"
                                    aria-label="Select example">
                                <option value="3">C.M 1:3</option>
                                <option value="4" Selected="True">C.M 1:4</option>
                                <option value="5">C.M 1:5</option>
                                <option value="6">C.M 1:6</option>
                                <option value="7">C.M 1:7</option>
                                <option value="8">C.M 1:8</option>
                                <option value="9">C.M 1:9</option>
                            </select>
                        </div>
                    </div>
                    <div class="row input-group mt-1 mb-2">
                        <div class="col-md-4 text-end">
                            <label class="form-label mt-7">
                                Size of Brick
                                <span title="Check out over 200 in-house components, plugins and ready for use sd solutions"
                                      data-bs-toggle="tooltip"
                                      data-bs-trigger="hover"
                                      data-bs-dismiss="click"
                                      data-bs-placement="bottom"
                                      class="fa fa-info-circle font-lg popovers mx-2 btn-circle"
                                      style="color: #39abde"></span>
                            </label>
                        </div>
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="row mx-1 fw-bolder">Length</div>
                                    <div class="row">
                                        <div class="input-group input-group-sm input-group-solid">
                                            <input type="text" asp-for="txtLengthBrick" value="19"
                                                   class="form-control"
                                                   aria-label="Amount (to the nearest dollar)" />
                                            <span  class="input-group-text text-primary">cm</span>
                                            @*@Html.ValidationMessageFor(m => m.txtLengthBrick, "", new { @class = "form-text text-danger" })*@
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="row">
                                        <b>Width</b>
                                    </div>
                                    <div class="row">
                                        <div class="input-group input-group-sm input-group-solid">
                                            <input type="text" asp-for="txtWidthBrick" value="9"
                                                   class="form-control"
                                                   aria-label="Amount (to the nearest dollar)" />
                                            <span class="input-group-text text-primary">cm</span>
                                            @*@Html.ValidationMessageFor(m => m.txtWidthBrick, "", new { @class = "form-text text-danger" })*@
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="row">
                                        <b>Height</b>
                                    </div>
                                    <div class="row">
                                        <div class="input-group input-group-sm input-group-solid">
                                            <input type="text" asp-for="txtHeightBrick" value="9"
                                                   class="form-control"
                                                   aria-label="Amount (to the nearest dollar)" />
                                            <span class="input-group-text text-primary">cm</span>
                                            @*@Html.ValidationMessageFor(m => m.txtHeightBrick, "", new { @class = "form-text text-danger" })*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="text-end">
                        <input onclick="updateChart()" type="submit" value="Submit" class="btn btn-primary btn-sm" />
                        <a asp-action="Index" asp-controller="BrickMasonryCalculator"  class="btn btn-danger btn-sm">reset</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-5 mb-md-5 mb-xl-10 mb-3">
        <div class="card shadow">
            <div class="card-body img/10319505722267397698.jpeg">
                <div class="row">
                    <img src="~/ClinetPanel/img/10319505722267397698.jpeg" />
                </div>
            </div>
        </div>
    </div>
</div>