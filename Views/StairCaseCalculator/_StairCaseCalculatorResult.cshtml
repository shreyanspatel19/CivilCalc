<div class="row gy-5 g-xl-8 mt-1">
        <div class="col-md-12">
        <!--begin: card-->
            <div class="card shadow-sm">
            <!--begin :card header-->
                <div class="card-header">
                    <h3 class="card-title">
                        <span class="fa fa-info-circle font-lg popovers btn-circle"></span>
                        &nbsp;Air Conditioning British Thermal Units (AC BTUs)?
                    </h3>
                </div>
            <!--end :card header-->
            <!--begin :card body-->
                <div class="card-body">
                    <div class="row">
                    <!--begin :main section-->
                        <div class="col-md-12">
                        @Html.Raw(WebUtility.HtmlDecode(@Model.PageSection2))

                    </div>
                    <!--end :main section-->
                    </div>
                </div>
            <!--end :card body-->
        </div>
        <!--end: card-->
    </div>
    </div>
