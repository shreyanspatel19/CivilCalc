<!-- begin : Page setiion 3  -->
<div class="row gy-5 g-xl-8 mt-1">
    <div class="col-md-12">
        <!--begin: card-->
        <div class="card shadow-sm">
            <!--begin :card header-->
            <div class="card-header">
                <h3 class="card-title">
                    <span class="fa fa-info-circle font-lg popovers btn-circle"></span>
                    &nbsp;What are the important stair case?
                </h3>
            </div>
            <!--end :card header-->
            <!--begin :card body-->
            <div class="card-body">
                <div class="row">
                    <!--begin :main section-->
                    <div class="col-md-6">
                        @Html.Raw(WebUtility.HtmlDecode(@Model.PageSection3))

                    </div>
                    <div class="col-md-6">
                        <img class="mw-100 mh-300px card-rounded-bottom mt-2"
                             alt="AirConditionerSize"
