@using System.Net;
@using CivilCalc.BAL
@using Microsoft.AspNetCore.Html;
@model CivilCalc.Areas.CAL_Calculator.Models.CAL_CalculatorModel;

<!-- begin : first table -->
 <div class="row gy-5 g-xl-8">
      <div class="col-md-12">
        <div class="card shadow-sm">
          <div class="card-body">
            <div class="row">
              <!--begin: total value -->
              <div class="col-md-3 text-center">
                        <h5 class="card-title fw-bolder">Total Volume of Round Column</h5>

                        <span class="text-danger fw-bolder m-1 font-md">@Html.Raw(WebUtility.HtmlDecode(ViewBag.lblAnswerCubicMeterAndCMValue))</span><b>&&</b>
                        <span class="text-danger fw-bolder mx-1 font-md">@Html.Raw(WebUtility.HtmlDecode(ViewBag.lblAnswerCubicFeetAndInchValue))</span>
              </div>
              <!--end: total value -->
               <!--begin: table -->
              <div class="col-md-5">
                <div class="table-responsive">
                 <table class="table table-row-bordered">
                    <thead>
                      <tr class="fw-bolder fs-6 text-gray-800">
                        <th>Sr.</th>
                        <th>Material</th>
                        <th>Unit</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td>1</td>
                                        <td><img src="@CV.imgCement" style="width:25px;border-width:0px;">Cement</td>
                                        <td>@ViewBag.lblAnswerCement</td>
                      </tr>
                      <tr>
                        <td>2</td>
                         <td><img src="@CV.imgSand" style="width:25px;border-width:0px;">Sand</td>
                         <td>@ViewBag.lblAnswerSand</td>
                      </tr>
                      <tr>
                        <td>3</td>
                                        <td><img src="@CV.imgAggregate" style="width:25px;border-width:0px;">Aggregate</td>
                                        <td>@ViewBag.lblAnswerAggregate</td>
                      </tr>
                    </tbody>
                 </table>
                </div>
              </div>
               <!--end: table -->
              <div class="col-md-4">
            <!--begin::Card body-->
            <div
              class="card-body pt-2 pb-4 d-flex flex-wrap align-items-center">
              <!--begin::Chart-->
              <style>
                  .chart-container {
                      position: relative;
                      margin: auto;
                      height: 20vh;
                      width: 20vw;
                  }
              </style>
              <div class="chart-container">
                <canvas id="myChart"></canvas>
              </div>
              <!--end::Chart-->
            </div>
            <!--end::Card body-->
          </div>
            </div>
          </div>
        </div>
      </div>
    </div>
 <!--end : first table-->

<!-- begin : calculation steps  -->
<div class="row gy-5 g-xl-8 mt-1">
    <div class="col-lg-12">
        <div class="card shadow-sm table-responsive">
            <div class="card-header">
                <h3 class="card-title">
                    <img class="img-fluid"
                         style="width: 16px"
                         src="@Url.Content(Model.CalculatorIcon)" />
                    &nbsp;@Model.CalculatorName
                </h3>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="row">
                        <div class="col-md-4">
                            <h4 class="bold">Radius</h4>
                            <br />
                            <blockquote>
                                <label>@Html.Raw(WebUtility.HtmlDecode(ViewBag.lblRadiusFormula))</label>
                            </blockquote>
                        </div>

                        <div class="col-md-4">
                            <h4 class="bold">Volume</h4>
                            <br />
                            <blockquote>
                                <label>@Html.Raw(WebUtility.HtmlDecode(ViewBag.lblVolumeFormula))</label>
                            </blockquote>
                        </div>
                        <div class="col-md-4">
                            <h4 class="bold">Dry Volume</h4>
                            <br />
                            <blockquote>
                                <label>@Html.Raw(WebUtility.HtmlDecode(ViewBag.lblDryVolumeFormula))</label>
                            </blockquote>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-4">
                            <h4 class="bold">
                                <img src="@CV.imgCement" style="width:25px;border-width:0px;">
                                Amount of Cement Required
                            </h4>
                            <blockquote>
                                <label>@Html.Raw(WebUtility.HtmlDecode(ViewBag.lblCementFormula))</label>
                            </blockquote>
                            <div class="alert alert-block alert-success text-center" style="margin: 10px;">
                                <strong>Note: </strong>1 Bag of cement <strong>= 0.035 m<sup>3</sup>.</strong>
                                <br />
                                1 Cement bag contains <strong>= 50 kg cement</strong>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <h4 class="bold">
                                <img src="@CV.imgSand" style="width:25px;border-width:0px;">
                                Amount of Sand Required
                            </h4>
                            <blockquote>
                                <label>@Html.Raw(WebUtility.HtmlDecode(ViewBag.lblSandFormula))</label>
                            </blockquote>
                            <div class="alert alert-block alert-success text-center">
                                <strong>Note: </strong>By considering dry loose bulk density of sand <strong>= 1550 kg/m<sup>3</sup>.</strong>
                                <br />
                                <strong>1000 kg = 1 Ton</strong>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <h4 class="bold">
                                <img src="@CV.imgAggregate" style="width:25px;border-width:0px;">
                                Amount of Aggregate Required
                            </h4>
                            <blockquote>
                                <label>@Html.Raw(WebUtility.HtmlDecode(ViewBag.lblAggregateFormula))</label>

                            </blockquote>
                            <div class="alert alert-block alert-success text-center">
                                <strong>Note: </strong>By considering dry loose bulk density of aggregate <strong>= 1350 kg/m<sup>3</sup>.</strong>
                                <br />
                                <strong>1000 kg = 1 Ton</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end : calculation steps  -->

<!-- begin : Page setiion 1  -->
        <div class="row gy-5 g-xl-8 mt-1">
            <div class="col-lg-12">
                <!--begin: card-->
                <div class="card shadow-sm">
                    <!--begin :card header-->
                    <div class="card-header">
                        <h3 class="card-title">
                    <span class="fa fa-info-circle font-lg popovers btn-circle"></span>

                    &nbsp;What is circular column calculation?
                        </h3>
                    </div>
                    <!--end :card header-->
                    <!--begin :card body-->
                    <div class="card-body p-0">
                        <div class="row">
                            <!--begin :main section-->
                            <div class="col-md-6">
                                <div class="card-p">
                                    @Html.Raw(WebUtility.HtmlDecode(Model.PageSection1))
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="text-center px-4">
                                    <img class="mw-100 img-fluid mh-300px card-rounded-bottom mt-2 ClayBricks.jpg"
                                 alt="RoundColumn"
                                 src="~/ClinetPanel/img/Quantity-Estimator/Round_Column.jpg" />
                                </div>
                            </div>
                            <!--end :main section-->
                        </div>
                        <hr />
                       
                        <div class="row card-body">
                            <div class="col-md-9">
                            <div class="table-responsive">
                            <h5 class="bold card-title">
                                Circular Column Calculation
                            </h5>
                            <blockquote class="font-md">
                                <math xmlns='http://www.w3.org/1998/Math/MathML'><mo>Radius =</mo><mfrac><mi>Diameter</mi><mn>2</mn></mfrac></math>
                                <br />
                                <br />
                                <math xmlns='http://www.w3.org/1998/Math/MathML'><mo>Volume of round column =</mo><msup><mi>&#x3C0;r</mi><mn>2</mn></msup><mi>h</mi></math>
                                <br />
                                <br />
                                <math xmlns='http://www.w3.org/1998/Math/MathML'><mo>Dry Volume =</mo><mi>Volume (Cubic Meter)</mi><mo>&#xD7;</mo><mn>1.524</mn></math>
                                <br />
                                <br />
                                <math xmlns='http://www.w3.org/1998/Math/MathML'><mo>Cement Volume =</mo><mfrac><mrow><mi>Dry Volume</mi><mo>&#xD7;</mo><mi>Cement</mi></mrow><mi>Sum of Ratio</mi></mfrac></math>
                                <br />
                                <br />
                                <math xmlns='http://www.w3.org/1998/Math/MathML'><mo>No. of Cement Bags =</mo><mfrac><mrow><mi>Cement Volume</mi></mrow><mrow><mn>0.035</mn></mrow></mfrac></math>
                                <br />
                                <br />
                                <math xmlns='http://www.w3.org/1998/Math/MathML'><mo>Sand Volume =</mo><mfrac><mrow><mi>Dry Volume</mi><mo>&#xD7;</mo><mi>Sand</mi></mrow><mi>Sum of Ratio</mi></mfrac></math>
                                <br />
                                <br />
                                <math xmlns='http://www.w3.org/1998/Math/MathML'><mo>Sand in Ton=</mo><mfrac><mrow><mi>Sand Volume</mi><mo>&#xD7;</mo><mn>1550</mn></mrow><mn>1000</mn></mfrac></math>
                                <br />
                                <br />
                                <math xmlns='http://www.w3.org/1998/Math/MathML'><mo>Aggregate Volume =</mo><mfrac><mrow><mi>Dry Volume</mi><mo>&#xD7;</mo><mi>Aggregate</mi></mrow><mi>Sum of Ratio</mi></mfrac></math>
                                <br />
                                <br />
                                <math xmlns='http://www.w3.org/1998/Math/MathML'><mo>Aggregate in Ton=</mo><mfrac><mrow><mi>Aggregate Volume</mi><mo>&#xD7;</mo><mn>1350</mn></mrow><mn>1000</mn></mfrac></math>
                            </blockquote>
                       
                        Where,
                        <ul>
                            <li>1.524 is dry volume for the concrete</li>
                            <li>0.035 is volume of one cement bag.</li>
                            <li>1550 is density volume conversion sand m<sup>3</sup> to kg.</li>
                            <li>1350 is density volume conversion aggregate m<sup>3</sup> to kg.</li>
                        </ul>
                            </div>
                            </div>
                            <div class="col-md-3" align="center">
                        <img id="ctl00_cphPageContent_imgClayBricks" title="Clay bricks" class="img img-fluid" src="~/ClinetPanel/img/Quantity-Estimator/Round_Column_Fig.jpg" alt="Bricks Masonry Calculator" style="border-width:0px;">
                            </div>
                    </div>
                </div>
                    <!--end :card body-->
                </div>
                <!--end :card -->
            </div>
        </div>
        </div>
<!-- end : Page setiion 1   -->

<!-- begin : Page setiion 2   -->
        <div class="row gy-5 g-xl-8 mt-1">
            <div class="col-lg-12">
                <!--begin: card-->
                <div class="card shadow-sm">
                     <!--begin :card header-->
                    <div class="card-header">
                        <h3 class="card-title">
                            <span class="fa fa-info-circle font-lg popovers btn-circle"></span>
                    &nbsp;What are the importance circular column?
                        </h3>
                    </div>
                    <!--end :card header-->
                     <!--begin :card body-->
                    <div class="card-body p-0">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card-p">
                                    @Html.Raw(WebUtility.HtmlDecode(Model.PageSection2))
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--end :card body-->
                </div>
                <!--end: card-->
            </div>
    </div>
<!-- end : Page setiion 2   -->

    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
    <script>
        // get the canvas element and its context
        var ctx = document.getElementById('myChart').getContext('2d');

        // create the chart with data and options
        var myChart = new Chart(ctx, {
            type: 'pie',
            data: {
            labels: ['Cement', 'Sand', 'Aggregate'],
                datasets: [{
                    label: 'Asp dataset',
                data: [@ViewBag.ChartCementBag, @ViewBag.ChartSandInTon, @ViewBag.ChartAggregateInTon],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.7)',
                        'rgba(54, 162, 235, 0.8)',
                        'rgba(255, 206, 86, 0.9)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                        scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
    </script>
