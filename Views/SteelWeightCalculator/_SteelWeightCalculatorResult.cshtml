<!-- begin : Page setiion 1  -->
        <div class="row gy-5 g-xl-8 mt-1">
            <div class="col-lg-12">
                <!--begin: card-->
                <div class="card shadow-sm">
                    <!--begin :card header-->
                    <div class="card-header">
                        <h3 class="card-title">
                            <img class="img-fluid"
                                 style="width: 16px"
                                 src="@Url.Content(Model.CalculatorIcon)" />
                    &nbsp;What is steel weight calculation?
                        </h3>
                    </div>
                    <!--end :card header-->
                    <!--begin :card body-->
                    <div class="card-body p-0">
                        <div class="row">
                            <!--begin :main section-->
                            <div class="col-md-12">
                                <div class="card-p ">
                                    @Html.Raw(WebUtility.HtmlDecode(Model.PageSection1))
                                </div>
                            </div>
                            <!--end :main section-->
                        </div>
                        <hr />
                        
                        <div class="row card-body">
                            <div class="col-md-6">
                            <div class="table-responsive">
                            <h5 class="bold" title="Formula for steel weight calculation">Steel weight calculation</h5>

                                    <blockquote>
                                <span class="font-md bold" title="Formula for calculate steel weight in kg">Steel weight in kg</span>
                                <br />
                                <br />
                                <math xmlns='http://www.w3.org/1998/Math/MathML'><mo>=</mo><mfrac><msup><mi>D</mi><mn>2</mn></msup><mn>162.28</mn></mfrac><mo>&#xD7;</mo><mi>Length</mi><mo>&#xD7;</mo><mi>Quantity</mi></math>
                                <br />
                                <br />
                                <span class="font-md bold" title="Formula for calculate steel weight in ton">Steel weight in ton</span>
                                <br />
                                <br />
                                <math xmlns="http://www.w3.org/1998/Math/MathML"><mo>=</mo><mfrac><mrow><mi>Steel Weight in kg</mi></mrow><mn>1000</mn></mfrac></math>
                            </blockquote>
                            Where,
                                <ul>
                                    <li>D= Diameter of bar in millimeter
                                    </li>
                                    <li>L= Length of bar in meter
                                    </li>
                                    <li>Now the question is what the 162.28 is.
                                    </li>
                                </ul>
                            </div>
                            </div>
                            <div class="col-md-6" align="center">
                        <img id="ctl00_cphPageContent_imgClayBricks" title="Clay bricks" class="img img-fluid" src="~/ClinetPanel/img/Quantity-Estimator/SteelWeightFig.png" alt="Bricks Masonry Calculator" style="border-width:0px;">
                            </div>
                    </div>
                <div class="row card-body">
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                        <div class="portlet light bg-inverse">
                            <div class="portlet-title">
                                <div class="caption">
                                    <i class="icon-puzzle font-red-flamingo"></i>
                                    <span class="caption-subject bold font-red-flamingo text-danger fw-bolder">
                                        If The L is in meter:<br />
                                        Multiply the total length of bar with the following unit weight.<br />
                                        For,
                                    </span>
                                    <hr/>
                                </div>
                            </div>
                            <div class="portlet-body">
                                <ul>
                                    <li>
                                        10mm ø bar = 0.617 kg/m
                                    </li>
                                    <li>
                                        12mm ø bar = 0.888 kg/m
                                    </li>
                                    <li>
                                        16mm ø bar = 1.580 kg/m
                                    </li>
                                    <li>
                                        20mm ø bar = 2.469 kg/m
                                    </li>
                                    <li>
                                        25mm ø bar = 3.858 kg/m
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                        <div class="portlet light bg-inverse">
                            <div class="portlet-title">
                                <div class="caption">
                                    <i class="icon-puzzle font-red-flamingo"></i>
                                    <span class="caption-subject bold font-red-flamingo text-danger fw-bolder">
                                        If the L is in foot:<br />
                                        Multiply the total length of bar with the following unit weight.<br />
                                        For,
                                    </span>
                                    <hr />
                                </div>
                            </div>
                            <div class="portlet-body">
                                <ul>
                                    <li>
                                        10mm ø bar = 0.188 kg/ft
                                    </li>
                                    <li>
                                        12mm ø bar = 0.270 kg/ft
                                    </li>
                                    <li>
                                        16mm ø bar = 0.480 kg/ft
                                    </li>
                                    <li>
                                        20mm ø bar = 0.750 kg/ft
                                    </li>
                                    <li>
                                        25mm ø bar = 1.172 kg/ft
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                </div>
                    <!--end :card body-->
                </div>
                <!--end :card -->
            </div>
