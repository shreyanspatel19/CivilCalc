                                        <td><img src="@CV.imgputty" style="width:25px;border-width:0px;">Putty</td>
                                        <td>@ViewBag.lblAnswerPutty</td>
                      </tr>
                    </tbody>
                 </table>
                </div>
              </div>
               <!--end: table -->
            </div>
          </div>
        </div>
      </div>
    </div>
 <!--end : first table-->

<!-- begin : calculation steps  -->
        <div class="row gy-5 g-xl-8 mt-1">
    <div class="col-lg-12">
        <div class="card shadow-sm table-responsive">
            <div class="card-header">
                <h3 class="card-title">
                    <img class="img-fluid"
                         style="width: 16px"
                         src="@Url.Content(Model.CalculatorIcon)" />
                    &nbsp;@Model.CalculatorName
                </h3>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-4">
                        <h4 class="bold">Paint Area</h4>
                        <br />
                        <blockquote >
                            <label>@Html.Raw(WebUtility.HtmlDecode(ViewBag.lblPaintAreaFormula))</label>

                        </blockquote>
                        <div class="alert alert-block alert-success text-center" style="margin: 30px;">
                            <strong>Note: </strong>
                            Approx Paint Area Including<strong> Wall And Ceiling</strong>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <h4 class="bold">Door & Window Area</h4>
                        <br />
                        <blockquote>
                            <label>@Html.Raw(WebUtility.HtmlDecode(ViewBag.lblDoorAreaFormula))</label>
                        </blockquote>
                    </div>
                    <div class="col-md-4">
                        <h4 class="bold">Actual Paint Area</h4>
                        <br />
                        <blockquote>
                            <label>@Html.Raw(WebUtility.HtmlDecode(ViewBag.lblActualPaintFormula))</label>

                        </blockquote>

                    </div>
                </div>
                <hr/>
                <div class="row text-center">
                    <div class="col-md-4">
                        <h4 class="bold">Paint</h4>
                        <br />
                        <blockquote>
                            <label>@Html.Raw(WebUtility.HtmlDecode(ViewBag.lblPaintFormula))</label>
                        </blockquote>
                        <div class="alert alert-block alert-success text-center" style="margin: 30px;">
                            <strong>Note: </strong>
                            1 liter of paint cover upto<strong>100 sq.ft of Area</strong>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <h4 class="bold">Primer</h4>
                        <br />
                        <blockquote>
                            <label>@Html.Raw(WebUtility.HtmlDecode(ViewBag.lblPrimerFormula))</label>
                        </blockquote>
                        <div class="alert alert-block alert-success text-center" style="margin: 30px;">
                            <strong>Note: </strong>
                            1 liter of primer cover upto<strong>100 sq.ft of Area</strong>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <h4 class="bold">Putty</h4>
                        <br />
                        <blockquote>
                            <label>@Html.Raw(WebUtility.HtmlDecode(ViewBag.lblPuttyFormula))</label>
                        </blockquote>
                        <div class="alert alert-block alert-success text-center" style="margin: 30px;">
                            <strong>Note: </strong>
                            2.5 kg of putty cover upto<strong>100 sq.ft of Area</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end : calculation steps -->

<!-- begin : Page setiion 1  -->
        <div class="row gy-5 g-xl-8 mt-1">
            <div class="col-lg-12">
                <!--begin: card-->
                <div class="card shadow-sm">
                    <!--begin :card header-->
                    <div class="card-header">
                        <h3 class="card-title">
                            <span class="fa fa-info-circle font-lg popovers btn-circle"></span>
                           
                    &nbsp;What is paint calculation?
                        </h3>
                    </div>
                    <!--end :card header-->
                    <!--begin :card body-->
                    <div class="card-body p-0">
                        <div class="row">
                            <!--begin :main section-->
                            <div class="col-md-6">
                                <div class="card-p mb-10">
                            @Html.Raw(WebUtility.HtmlDecode(Model.PageSection1))
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="text-center px-4">
                                    <img class="mw-100 img-fluid mh-300px card-rounded-bottom mt-2 ClayBricks.jpg"
                                 alt="Paint-Calculator" ToolTip="Paint Calculator | Color Calculation"
                                 src="~/ClinetPanel/img/Quantity-Estimator/PaintArea.png" />
                                </div>
                            </div>
                            <!--end :main section-->
                        </div>
                        <hr />
                       
                        <div class="row card-body">
                            <div class="col-md-9">
                        <div class="table-responsive">
                            <h5 class="bold card-title">
                                Paint Calculation
                            </h5>
                            <blockquote class="font-md">
                                <math xmlns='http://www.w3.org/1998/Math/MathML'><mo>Paint Area =</mo><mi>Carpet Area</mi><mo>*</mo><mi>3.5</mi></math>
                                <br />
                                <br />
                                <math xmlns='http://www.w3.org/1998/Math/MathML'><mo>Door Area=</mo><mi>Door Height</mi><mo>*</mo><mi>Door Width</mi><mo>*</mo><mi>No of Doors</mi></math>
                                <br />
                                <br />
                                <math xmlns='http://www.w3.org/1998/Math/MathML'><mo>Window Area=</mo><mi>Window Height</mi><mo>*</mo><mi>Window Width</mi><mo>*</mo><mi>No of Windows</mi></math>
                               
                                    <br />
                                    <math xmlns='http://www.w3.org/1998/Math/MathML'><mi>Actual Paint Area</mi><mo>=</mo><mi>Paint Area</mi><mo>-</mo><mi>Door Area</mi><mo>-</mo><mi>Window Area</mi></math>
                                    <br />
                                    <br />
                                    <math xmlns='http://www.w3.org/1998/Math/MathML'><mo>Paint=</mo><mfrac><mi>Actual Paint Area</mi><mi>100</mi></mfrac></math>
                                    <br />
                                    <br />
                                    <math xmlns='http://www.w3.org/1998/Math/MathML'><mo>Primer=</mo><mfrac><mi>Actual Paint Area</mi><mi>100</mi></mfrac></math>
                                    <br />
                                    <br />
                                    <math xmlns='http://www.w3.org/1998/Math/MathML'><mo>Putty=</mo><mfrac><mi>Actual Paint Area</mi><mi>40</mi></mfrac></math>
                            </blockquote>
                      
                        Where,
                        <ul>
                            <li>m<sup>2</sup>(meter Square) and ft<sup>2</sup>(feet Square) is a total area.</li>
                            <li>Length and Width in meter/cm or feet/inch.</li>
                        </ul>
                        <p>
                            <strong>Note:</strong><br />
                            1 m<sup>2</sup> = 10.7639 ft<sup>3</sup><br />
                            1 litre = 0.264172 gallons
                        </p>
                            </div>
                            </div>
                           
                    </div>
                </div>
                    <!--end :card body-->
                </div>
                <!--end :card -->
            </div>
        </div>
<!-- end : Page setiion 1   -->

