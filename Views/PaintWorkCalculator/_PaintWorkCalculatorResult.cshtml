                 <span class="text-danger fw-bolder m-1 font-md" style="font-size: 12px">|</span>
                        <span class="text-danger fw-bolder mx-1 font-md" style="font-size: 20px">@Html.Raw(WebUtility.HtmlDecode(ViewBag.lblAnswerPaint_SquareFeetAndInchValue))</span>
              </div>
              <!--end: total value -->
               <!--begin: table -->
              <div class="col-md-6">
                <div class="table-responsive">
                 <table class="table table-row-bordered">
                    <thead>
                      <tr class="fw-bolder fs-6 text-gray-800">
                        <th>Sr.</th>
                        <th>Material</th>
                                        <th>Quantity</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td>1</td>
                                        <td><img src="@CV.imgPaintArea" style="width:25px;border-width:0px;">Paint</td>
                                        <td>@ViewBag.lblAnswerPaint</td>
                      </tr>
                      <tr>
                        <td>2</td>
                                        <td><img src="@CV.imgprimer" style="width:25px;border-width:0px;">Primer</td>
                                        <td>@ViewBag.lblAnswerPrimer</td>
                      </tr>
                      <tr>
