@model CivilCalc.Models.AirConditionerSizeCalculator;

<div class="row gy-5 g-xl-8">
    <!--begin: parameter-->
    <div class="col-md-7 mb-md-5 mb-xl-10">
        <!--begin: card-->
        <div class="card shadow">
            <!--begin :card header-->
            <div class="card-header">
                <h2 class="card-title" title="Air Conditioner Tonnage Calculation">
                    <img class="img-fluid"
                         style="width: 16px"
                         src="@Url.Content(ViewBag.CalculatorIcon)" />
                    &nbsp;@ViewBag.CalculatorName.ToUpper()
                </h2>
            </div>
            <!--end :card header-->
            <!--begin :card body-->
            <div class="card-body">
                <!--begin :form body-->
                <form id="filterForm" data-ajax="true" data-ajax-method="post" data-ajax-mode="replace" data-ajax-update="#SearchResult"
                      data-ajax-success="OnSuccess(this.id,data, status, xhr);" data-ajax-failure="OnFailure(xhr, status, error);"
                      asp-action="_Calculation" asp-controller="AirConditionerSizeCalculator" novalidate="novalidate">
                    @Html.AntiForgeryToken()

                    <!--begin :row 1  Length of Room-->
                    <div class="row input-group mb-2">
                        <div class="col-md-4 text-end">
                            <label class="form-label mt-3">
                                Length of Room
                                <span title="Length is the term used for identifying the size of an object or distance."
                                      data-bs-toggle="tooltip"
                                      data-bs-trigger="hover"
                                      data-bs-dismiss="click"
                                      data-bs-placement="bottom"
                                      class="fa fa-info-circle font-lg popovers mx-2 btn-circle"
                                      style="color: #39abde"></span>
                            </label>
                        </div>

                        <div class="col-sm-8">
                            <div class="row">
                                <div class="col-sm-6">
                                    <!--begin :input-->
                                    <div class="input-group input-group-sm input-group-solid">
                                        <input type="text" asp-for="LengthA" value="16" data-bs-toggle="tooltip"
                                               title="Enter length"
                                               class="form-control"/>
                                        <span id="lengthToMF" class="input-group-text text-primary">feet</span>
                                        @Html.ValidationMessageFor(m => m.LengthA, "", new { @class = "form-text text-danger" })
                                    </div>
                                    <!--end :input-->
                                </div>
                                <div class="col-sm-6">
                                    <!--begin :input-->
                                    <div class="input-group input-group-sm input-group-solid mt-1">
                                        <input type="text" asp-for="LengthB" value="6"
                                               class="form-control" />
                                        <span id="lengthToCI" class="input-group-text text-primary">inch</span>
                                        @Html.ValidationMessageFor(m => m.LengthB, "", new { @class = "form-text text-danger" })
                                    </div>
                                    <!--end :input-->
                                </div>
                            </div>
                            <!--end :input-->
                        </div>
                    </div>
                    <!--end :row 1  Length of Room-->

                    <!--begin :row 2 Breadth of Room -->
                    <div class="row input-group mb-2">
                        <div class="col-md-4 text-end">
                            <label class="form-label mt-3">
                                Breadth of Room
                                <span title="Breadth is a measurement of how far across a three dimensional object is."
                                      data-bs-toggle="tooltip"
                                      data-bs-trigger="hover"
                                      data-bs-dismiss="click"
                                      data-bs-placement="bottom"
                                      class="fa fa-info-circle font-lg popovers mx-2 btn-circle"
                                      style="color: #39abde"></span>
                            </label>
                        </div>
                        <div class="col-sm-8">
                            <div class="row">
                                <div class="col-sm-6">
                                    <!--begin :input-->
                                    <div class="input-group input-group-sm input-group-solid">
                                        <input type="text" asp-for="BreadthA" value="12" data-bs-toggle="tooltip"
                                               title="Enter Breadth"
                                               class="form-control"
                                               aria-label="Amount (to the nearest dollar)" />
                                        <span id="heightToMF" class="input-group-text text-primary">feet</span>
                                        @Html.ValidationMessageFor(m => m.BreadthA, "", new { @class = "form-text text-danger" })
                                    </div>
                                    <!--end :input-->
                                </div>
                                <div class="col-sm-6">
                                    <!--begin :input-->
                                    <div class="input-group input-group-sm input-group-solid mt-1">
                                        <input type="text" asp-for="BreadthB"
                                               class="form-control" value="6"
                                               aria-label="Amount (to the nearest dollar)" />
                                        <span id="heightToCI" class="input-group-text text-primary">inch</span>
                                        @Html.ValidationMessageFor(m => m.BreadthB, "", new { @class = "form-text text-danger" })
                                    </div>
                                    <!--end :input-->
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--end :row 2 Breadth of Room -->

                    <!--begin :row 3 Height of Room -->
                    <div class="row input-group mb-2">
                        <div class="col-md-4 text-end">
                            <label class="form-label mt-3">
                                Height of Room
                                <span title="Height is a measurement of how far back a three dimensional object is."
                                      data-bs-toggle="tooltip"
                                      data-bs-trigger="hover"
                                      data-bs-dismiss="click"
                                      data-bs-placement="bottom"
                                      class="fa fa-info-circle font-lg popovers mx-2 btn-circle"
                                      style="color: #39abde"></span>
                            </label>
                        </div>
                        <div class="col-sm-8">
                            <div class="row">
                                <div class="col-sm-6">
                                    <!--begin :input-->
                                    <div class="input-group input-group-sm input-group-solid">
                                        <input type="text" asp-for="HeightA" value="9" data-bs-toggle="tooltip"
                                               title="Enter Height"
                                               class="form-control"
                                               aria-label="Amount (to the nearest dollar)" />
                                        <span id="heightToMF" class="input-group-text text-primary">feet</span>
                                        @Html.ValidationMessageFor(m => m.HeightA, "", new { @class = "form-text text-danger" })
                                    </div>
                                    <!--end :input-->
                                </div>
                                <div class="col-sm-6">
                                    <!--begin :input-->
                                    <div class="input-group input-group-sm input-group-solid mt-1">
                                        <input type="text" asp-for="HeightB"
                                               class="form-control" value="6"
                                               aria-label="Amount (to the nearest dollar)" />
                                        <span id="heightToCI" class="input-group-text text-primary">inch</span>
                                        @Html.ValidationMessageFor(m => m.HeightB, "", new { @class = "form-text text-danger" })
                                    </div>
                                    <!--end :input-->
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--end :row 3 Height of Room -->

                    <!--begin :row 4 No of Person -->
                    <div class="row input-group mb-2">
                        <div class="col-md-4 text-end">
                            <label class="form-label mt-3">
                                No of Person
                                <span title="Person Lives in Rooms where you want to fit Air Conditioner"
                                      data-bs-toggle="tooltip"
                                      data-bs-trigger="hover"
                                      data-bs-dismiss="click"
                                      data-bs-placement="bottom"
                                      class="fa fa-info-circle font-lg popovers mx-2 btn-circle"
                                      style="color: #39abde"></span>
                            </label>
                        </div>
                        <div class="col-sm-8">
                            <div class="row">
                                <div class="col-sm-12">
                                    <!--begin :input-->
                                    <div class="input-group input-group-sm input-group-solid">
                                        <input type="text" asp-for="NoofPerson" value="5" data-bs-toggle="tooltip"
                                               title="Enter No ofPerson"
                                               class="form-control"
                                               aria-label="Amount (to the nearest dollar)" />
                                        @Html.ValidationMessageFor(m => m.NoofPerson, "", new { @class = "form-text text-danger" })
                                    </div>
                                    <!--end :input-->
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--end :row 4 No of Person -->

                    <!--begin :row 5 Max Temperature-->
                    <div class="row input-group mb-2">
                        <div class="col-md-4 text-end">
                            <label class="form-label mt-3">
                                Max Temperature
                                <span title="the degree or intensity of heat present in a substance or object, especially as expressed according to a comparative scale and shown by a thermometer or perceived by touch."
                                      data-bs-toggle="tooltip"
                                      data-bs-trigger="hover"
                                      data-bs-dismiss="click"
                                      data-bs-placement="bottom"
                                      class="fa fa-info-circle font-lg popovers mx-2 btn-circle"
                                      style="color: #39abde"></span>
                            </label>
                        </div>
                        <div class="col-sm-8">
                            <div class="row">
                                <div class="col-sm-12">
                                    <!--begin :input-->
                                    <div class="input-group input-group-sm input-group-solid">
                                        <input type="text" asp-for="temperature" value="35" data-bs-toggle="tooltip"
                                               title="Enter Max  temperature"
                                               class="form-control"
                                               aria-label="Amount (to the nearest dollar)" />
                                        <span id="heightToCI" class="input-group-text text-primary">°c</span>
                                        @Html.ValidationMessageFor(m => m.temperature, "", new { @class = "form-text text-danger" })
                                    </div>
                                    <!--end :input-->
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--end :row 5 Max Temperature-->
                    <hr />
                    <!--begin :form submit-->
                    <div class="text-end">
                        <input onclick="updateChart()" type="submit" value="Calculate" title="Calculate Air Conditioner Size" class="btn btn-primary btn-sm" />
                        <a asp-action="Index" asp-controller="AirConditionerSizeCalculator" title="Reset" class="btn btn-danger btn-sm">Reset</a>
                    </div>
                    <!--end :form submit-->
                </form>
                <!--end :form body-->
            </div>
            <!--end :card body-->
        </div>
        <!--end: card-->
    </div>
    <!--end: parameter-->

    <!--begin: ads-->
    <div class="col-md-5 mb-md-5 mb-xl-10 mb-3">
        <!--begin :card-->
        <div class="card shadow">
            <!--begin :card body-->
            <div class="card-body">
                <div class="row">
                    <img src="~/ClinetPanel/img/10319505722267397698.jpeg" />
                </div>
            </div>
            <!--end :card body-->
        </div>
        <!--end :card -->
    </div>
    <!--end: ads-->
</div>