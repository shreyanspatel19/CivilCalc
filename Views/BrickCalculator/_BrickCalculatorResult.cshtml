                        <th>Sr.</th>
                        <th>Material</th>
                        <th>Unit</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td>1</td>
                         <td><img src="@CV.imgtiles" style="width:25px;border-width:0px;">Bricks</td>
                        <td>@ViewBag.lblAnswerTotalBricksValue</td>
                      </tr>
                      <tr>
                        <td>2</td>
                         <td><img src="@CV.imgCement" style="width:25px;border-width:0px;">Cement</td>
                         <td>@ViewBag.lblAmountCement</td>
                      </tr>
                      <tr>
                        <td>3</td>
                         <td><img src="@CV.imgSand" style="width:25px;border-width:0px;">Sand</td>
                          <td>@ViewBag.lblAmountSand</td>
                      </tr>
                    </tbody>
                 </table>
                </div>
              </div>
               <!--end: table -->
              <div class="col-md-4">
            <!--begin::Card body-->
            <div
              class="card-body pt-2 pb-4 d-flex flex-wrap align-items-center">
              <!--begin::Chart-->
              <style>
                  .chart-container {
                      position: relative;
                      margin: auto;
                      height: 20vh;
                      width: 20vw;
                  }
              </style>
              <div class="chart-container">
                <canvas id="myChart"></canvas>
              </div>
              <!--end::Chart-->
            </div>
            <!--end::Card body-->
          </div>
            </div>
          </div>
        </div>
      </div>
