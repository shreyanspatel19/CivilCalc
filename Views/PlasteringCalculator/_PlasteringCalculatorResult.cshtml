@using System.Net;
@using CivilCalc.BAL
@using Microsoft.AspNetCore.Html;
@model CivilCalc.Areas.CAL_Calculator.Models.CAL_CalculatorModel;

    @{}
<!-- begin : first table -->
<div class="row gy-5 g-xl-8">
    <div class="col-md-12">
        <div class="card shadow-sm">
          <div class="card-body">
            <div class="row">
              <!--begin: total value -->
              <div class="col-md-3 text-center">
                        <h4 class="card-title fw-bolder">Total Area of Plaster</h4>
                        <span class="text-danger fw-bolder" style="font-size: 20px">@Html.Raw(WebUtility.HtmlDecode(ViewBag.lblAnswerPlaster))</span><br />
                         
              </div>
               <!--end: total value -->

                    <!--begin: table -->
              <div class="col-md-5">
                <div class="table-responsive">
                  <table class="table table-row-bordered">
                    <thead>
                      <tr class="fw-bolder fs-6 text-gray-800">
                        <th>Sr.</th>
                        <th>Material</th>
                        <th>Quantity</th>
                      </tr>
                    </thead>
                    <tbody>
                 
                      <tr>
                        <td>1</td>
                                        <td><img src="@CV.imgCement" style="width:25px;border-width:0px;">&nbsp;Cement</td>
                        <td>@ViewBag.lblAnswerPlasterCement</td>
                      </tr>
                      <tr>
                        <td>2</td>
                                        <td><img src="@CV.imgSand" style="width:25px;border-width:0px;">&nbsp;Sand</td>
                         <td>@ViewBag.lblAnswerPlasterSand</td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
                    <!--end: table -->

              <div class="col-md-4">
                <!--begin::Card body-->
                <div
                  class="card-body pt-2 pb-4 d-flex flex-wrap align-items-center">
                  <!--begin::Chart-->
                  <style>
                      .chart-container {
                          position: relative;
                          margin: auto;
                          height: 20vh;
                          width: 20vw;
                      }
                  </style>
                  <div class="chart-container">
                    <canvas id="myChart"></canvas>
                  </div>
                  <!--end::Chart-->
                </div>
                <!--end::Card body-->
              </div>
            </div>
          </div>
        </div>
        </div>
    </div>
<!-- end : first table -->

<!-- begin : calculation formula  -->
<div class="row gy-5 g-xl-8 mt-1">
    <div class="col-md-12">
        <div class="card shadow-sm table-responsive">
            <div class="card-header">
                <h2 class="card-title" title="Calculation For Area For Plaster">
                    <img class="img-fluid"
                         style="width: 16px"
                         src="@Url.Content(Model.CalculatorIcon)" />
                    &nbsp;@Model.CalculatorName
                </h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-7">
                        <blockquote>
                            <label>@Html.Raw(WebUtility.HtmlDecode(ViewBag.lblPlasterAreaFormula))</label>

                        </blockquote>

                    </div>
                    <div class="col-md-3">
                        <img style="width:200px;border-width:0px;" class="img-fluid" src="~/ClinetPanel/img/Quantity-Estimator/LBVolumeBox.jpg" title="Plastering-Calculator" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end : calculation formula  -->

<!-- begin : calculation steps  -->
 <div class="row gy-5 g-xl-8 mt-1">
    <div class="col-lg-12">
        <div class="card shadow-sm table-responsive">
            <div class="card-header">
                <h2 class="card-title" title="Calculation For Material Require In Plastering">
                    <img class="img-fluid"
                         style="width: 16px"
                         src="@Url.Content(Model.CalculatorIcon)" />
                    &nbsp;@Model.CalculatorName
                </h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 pe-0">
                        <blockquote>
                            <label>@Html.Raw(WebUtility.HtmlDecode(ViewBag.lblPlasterMortar))</label>
                         </blockquote>
                       
                    </div>
                    <div class="col-md-6">
                       
                       
                            <label>@Html.Raw(WebUtility.HtmlDecode(ViewBag.lblPlasterCementFormula))</label>

                       
                       
                            <label>@Html.Raw(WebUtility.HtmlDecode(ViewBag.lblPlasterSandFormula))</label>
                       
                        
                    </div>
                    <div class="col-md-6">
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end : calculation steps   -->

@foreach (var pagecontect in ViewBag.Page)
{

    @Html.Raw(WebUtility.HtmlDecode(pagecontect.PageContent))

}

    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
    <script>
        // get the canvas element and its context
        var ctx = document.getElementById('myChart').getContext('2d');

        // create the chart with data and options
        var myChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: ['Cement', 'Sand'],
                datasets: [{
                    label: 'Asp dataset',
                data: [@ViewBag.Cementchart, @ViewBag.Sandchart],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.7)',
                        'rgba(54, 162, 235, 0.8)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                        scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
    </script>
