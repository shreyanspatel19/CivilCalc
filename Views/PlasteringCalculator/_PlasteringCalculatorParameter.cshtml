@model CivilCalc.Models.PlasteringCalculator;
 <div class="row">
                <div class="col-md-12">
                  
                </div>
            </div>
<div class="row gy-5 g-xl-8">
    <!--begin: parameter-->
    <div class="col-md-7 mb-md-5 mb-xl-10">
        <!--begin: card-->
        <div class="card shadow">
            <!--begin :card header-->
            <div class="card-header">
                <h2 class="card-title" title="Plaster Calculation">
                    <img class="img-fluid"
                         style="width: 16px"
                         src="@Url.Content(ViewBag.CalculatorIcon)" />
                    &nbsp;@ViewBag.CalculatorName.ToUpper()
                </h2>
            </div>
            <!--end :card header-->
            <!--begin :card body-->
            <div class="card-body">
                <!--begin :form body-->
                <form id="filterForm" data-ajax="true" data-ajax-method="post" data-ajax-mode="replace" data-ajax-update="#SearchResult"
                      asp-action="_Calculation" asp-controller="PlasteringCalculator" novalidate="novalidate">
                    @Html.AntiForgeryToken()
                    <!--begin :row 1  Unit-->
                    <div class="row input-group mb-2">
                        <div class="col-md-4 text-end">
                            <label class="form-label mt-2">
                                Unit
                                <span title="A unit may also mean the standard units used for measurement. For Ex. feet/inch &amp; meter/cm"
                                      data-bs-toggle="tooltip"
                                      data-bs-trigger="hover"
                                      data-bs-dismiss="click"
                                      data-bs-placement="bottom"
                                      class="fa fa-info-circle font-lg popovers mx-2 btn-circle"
                                      style="color: #39abde"></span>
                            </label>
                        </div>
                        <div class="col-md-8">
                            <!--begin :input-->
                            <select asp-for="UnitID" 
                                    data-bs-placement="right" data-bs-toggle="tooltip" 
                                    title="Select Unit (Feet/Inch &amp; Meter/CM)" 
                                    class="form-select form-select-sm form-select-solid" id="ddlUnit" onchange="meterTofeet()"
                                    aria-label="Select example">
                                <option value="1" Selected="True">Meter/CM</option>
                                <option value="2">Feet/Inch</option>
                            </select>
                            <!--end :input-->
                        </div>
                    </div>
                    <!--end :row 1  Unit-->

                    <!--begin :row 2 Plaster Type -->
                    <div class="row input-group mb-2">
                        <div class="col-md-4 text-end">
                            <label class="form-label mt-3">
                                Plaster Type
                                <span title="thickness of plastering for brick walls is 12 MM, 15 MM, 18 MM or 20 MM."
                                      data-bs-toggle="tooltip"
                                      data-bs-trigger="hover"
                                      data-bs-dismiss="click"
                                      data-bs-placement="bottom"
                                      class="fa fa-info-circle font-lg popovers mx-2 btn-circle"
                                      style="color: #39abde"></span>
                            </label>
                        </div>
                        <div class="col-md-8">
                            <!--begin :input-->
                            <select asp-for="PlasterID" class="form-select form-select-sm form-select-solid"
                                    title="Select Plaster Type" data-bs-placement="right" data-bs-toggle="tooltip"
                                    id="Other" aria-label="Select example" onchange="OtherPPartition()">
                                <option value="0.012" Selected="True">12 MM</option>
                                <option value="0.015" >15 MM</option>
                                <option value="0.018">18 MM</option>
                                <option value="0.020">20 MM</option>
                            </select>
                            <!--end :input-->
                        </div>
                    </div>
                    <!--end :row 2 Plaster Type -->

                    <!--begin :row 3 Length -->
                    <div class="row input-group mb-2">
                        <div class="col-md-4 text-end">
                            <label class="form-label mt-3">
                                Length
                                <span title="Length is the term used for identifying the size of an object or distance."
                                      data-bs-toggle="tooltip"
                                      data-bs-trigger="hover"
                                      data-bs-dismiss="click"
                                      data-bs-placement="bottom"
                                      class="fa fa-info-circle font-lg popovers mx-2 btn-circle"
                                      style="color: #39abde"></span>
                            </label>
                        </div>
                        <div class="col-sm-8">
                            <div class="row">
                                <div class="col-sm-6">
                                     <!--begin :input-->
                                    <div class="input-group input-group-sm input-group-solid"> 
                                        <input type="text" asp-for="LengthA" value="10"
                                        data-bs-placement="right" data-bs-toggle="tooltip" id="txtEducation"
                                        title="Enter length" class="form-control" />
                                        <span id="lengthToMF" class="input-group-text text-primary">meter</span>
                                        @Html.ValidationMessageFor(m => m.LengthA, "", new { @class = "form-text text-danger" })
                                    </div>
                                    <!--end :input-->

                                </div>
                                <div class="col-sm-6">
                                     <!--begin :input-->
                                    <div class="input-group input-group-sm input-group-solid mt-1">
                                        <input type="text" asp-for="LengthB" value="0" id="txtLodging"
                                               data-bs-placement="right" data-bs-toggle="tooltip"
                                               title="Enter length" class="form-control" />
                                        <span id="lengthToCI" class="input-group-text text-primary">cm</span>
                                        @Html.ValidationMessageFor(m => m.LengthB, "", new { @class = "form-text text-danger" })
                                    </div>
                                    <!--end :input-->
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--end :row 3 Length -->

                    <!--begin :row 4 Width -->
                    <div class="row input-group mb-2">
                        <div class="col-md-4 text-end">
                            <label class="form-label mt-3">
                                Width
                                <span title="Width is a measurement of how far back a three dimensional object is."
                                      data-bs-toggle="tooltip"
                                      data-bs-trigger="hover"
                                      data-bs-dismiss="click"
                                      data-bs-placement="bottom"
                                      class="fa fa-info-circle font-lg popovers mx-2 btn-circle"
                                      style="color: #39abde"></span>
                            </label>
                        </div>
                        <div class="col-sm-8">
                            <div class="row">
                                <div class="col-sm-6">
                                    <!--begin :input-->
                                    <div class="input-group input-group-sm input-group-solid">
                                        <input type="text" asp-for="WidthA" value="10"
                                               title="Enter Width" class="form-control"
                                               data-bs-placement="right" data-bs-toggle="tooltip"
                                               aria-label="Amount (to the nearest dollar)" />
                                        <span id="heightToMF" class="input-group-text text-primary">meter</span>
                                        @Html.ValidationMessageFor(m => m.WidthA, "", new { @class = "form-text text-danger" })
                                    </div>
                                    <!--end:input-->
                                </div>
                                <div class="col-sm-6">
                                    <!--begin :input-->
                                    <div class="input-group input-group-sm input-group-solid mt-1">
                                        <input type="text" asp-for="WidthB"
                                               title="Enter Width" class="form-control" value="0"
                                               data-bs-placement="right" data-bs-toggle="tooltip"
                                               aria-label="Amount (to the nearest dollar)" />
                                        <span id="heightToCI" class="input-group-text text-primary">cm</span>
                                        @Html.ValidationMessageFor(m => m.WidthB, "", new { @class = "form-text text-danger" })
                                    </div>
                                     <!--end :input-->
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--end :row 4 Width -->

                    <!--begin :row 5 Grade of footing -->
                    <div class="row input-group mb-2">
                        <div class="col-md-4 text-end">
                            <label class="form-label mt-3">
                                Grade of footing
                                <span title="The OPC comes as 43 Grade and 53 Grade. The 53 Grade is recommended for footing, beams, slab, and columns since you need to have initial strength while making these structures. For general plastering work or masonry work, you may use the other two PPC and PSC"
                                      data-bs-toggle="tooltip"
                                      data-bs-trigger="hover"
                                      data-bs-dismiss="click"
                                      data-bs-placement="bottom"
                                      class="fa fa-info-circle font-lg popovers mx-2 btn-circle"
                                      style="color: #39abde"></span>
                            </label>
                        </div>
                        <div class="col-md-8">
                            <!--begin :input-->
                            <select asp-for="GradeID" class="form-select form-select-sm form-select-solid" ToolTip="Select Ratio"
                                    data-bs-toggle="tooltip" data-bs-placement="right" title="Select Grade of footing" aria-label="Select example">
                                <option value="3" Selected="True">C.M 1:3</option>
                                <option value="4" >C.M 1:4</option>
                                <option value="5">C.M 1:5</option>
                                <option value="6">C.M 1:6</option>
                            </select>
                            <!--end :input-->
                        </div>
                    </div>
                    <!--begin :row 5 Grade of footing -->
                    
                    <hr />
                    <!--begin :form submit-->
                    <div class="text-end">
                        <input onclick="updateChart()" type="submit" value="Calculate" title="Calculate Plaster" class="btn btn-primary btn-sm" />
                        <a asp-action="Index" asp-controller="PlasteringCalculator" title="Reset" class="btn btn-danger btn-sm">Reset</a>
                    </div>
                    <!--end :form submit-->
                </form>
                <!--end :form body-->
            </div>
            <!--end :card body-->
        </div>
        <!--end: card-->
    </div>
    <!--end: parameter-->

    <!--begin: ads-->
    <div class="col-md-5 mb-md-5 mb-xl-10 mb-3">
        <!--begin :card-->
        <div class="card shadow">
            <!--begin :card body-->
            <div class="card-body">
                <div class="row">
                    <img src="~/ClinetPanel/img/10319505722267397698.jpeg" />
                </div>
            </div>
            <!--end :card body-->
        </div>
        <!--end :card -->
    </div>
    <!--end: ads-->
</div>